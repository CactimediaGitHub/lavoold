<?xml version='1.0' encoding='utf-8'?>
<widget id="com.litslink.lavo" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Lavo</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <splash density="port-hdpi" src="android_res/splash_screens/screen-hdpi-portrait.png" />
        <splash density="port-ldpi" src="android_res/splash_screens/screen-ldpi-portrait.png" />
        <splash density="port-mdpi" src="android_res/splash_screens/screen-mdpi-portrait.png" />
        <splash density="port-xhdpi" src="android_res/splash_screens/screen-xhdpi-portrait.png" />
        <allow-intent href="market:*" />
        <config-file parent="/manifest" target="AndroidManifest.xml">
            <permission android:name="com.litslink.lavo.permission.C2D_MESSAGE" android:protectionLevel="signature" />
            <uses-permission android:name="com.litslink.lavo.permission.C2D_MESSAGE" />
            <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
            <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
            <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
            <uses-permission android:name="android.permission.INTERNET" />
            <uses-permission android:name="android.permission.GET_ACCOUNTS" />
            <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
            <uses-permission android:name="android.permission.WAKE_LOCK" />
        </config-file>
    </platform>
    <platform name="ios">
        <splash height="480" src="ios_res/screen-iphone-portrait.png" width="320" />
        <splash height="960" src="ios_res/screen-iphone-portrait-2x.png" width="640" />
        <splash height="1024" src="ios_res/screen-ipad-portrait.png" width="768" />
        <splash height="2048" src="ios_res/screen-ipad-portrait-2x.png" width="1536" />
        <splash height="1136" src="ios_res/screen-iphone-portrait-568h-2x.png" width="640" />
        <splash height="1334" src="ios_res/screen-iphone-portrait-667h.png" width="750" />
        <splash height="2208" src="ios_res/screen-iphone-portrait-736h.png" width="1242" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="Orientation" value="portrait" />
    <preference name="xwalkVersion" value="19+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
    <preference name="xwalkMultipleApk" value="true" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="android-targetSdkVersion" value="22" />
    <plugin name="cordova-plugin-facebook4" spec="~1.7.4">
        <variable name="APP_ID" value="1113408808737940" />
        <variable name="APP_NAME" value="Lavo" />
    </plugin>
    <plugin name="cordova-plugin-firebase" spec="~0.1.18" />
</widget>
