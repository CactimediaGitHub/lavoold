{{#if hasPagination}}
  <div class="item previous" {{action "incrementPage" -1}}>
    &lt;
  </div>

  <ul class="pages">
    {{#each pages as |page|}}
      {{#if (eq page currentPage)}}
        <li class="item current">{{page}}</li>
      {{else}}
        <li class="item" {{action "pageClicked" page}}>{{page}}</li>
      {{/if}}
    {{/each}}
  </ul>

  <div class="item next" {{action "incrementPage" 1}}>
    &gt;
  </div>
{{/if}}