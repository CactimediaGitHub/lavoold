<div class="ui padded layout orders password-change">

  <div class="header content">
    <div class="ui header header-default-height margined">
      <div class="item" {{action (route-action 'goBack')}} class="item">
        <i class="lavo-icon-arrow icon"></i>
      </div>
      <div class="content">Change password</div>
      <div class="item"></div>
    </div>
  </div>
  <div class="content keyboard-scroll">
    <div class="ui list">
      {{ui-input-extended
      placeholder="Password"
      type="password"
      model=passwordForm
      valuePath="password"
      }}
      {{ui-input-extended
      placeholder="Confirm password"
      type="password"
      model=passwordForm
      valuePath="password_confirmation"
      }}
    </div>
    <div class="footer content">
      <div class="ui unbordered blue button" {{action  'savePassword'}}>Save changes</div>
    </div>
  </div>
</div>