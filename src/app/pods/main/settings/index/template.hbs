<div class="ui padded layout settings">

  <div class="header content">
    <div class="ui header header-default-height more-homepage margined">
      {{#link-to (constant 'ROUTE_HOME') class='item' tagName='div'}}
        <i class="lavo-icon-arrow icon"></i>
      {{/link-to}}
    </div>
  </div>

  <div class="content">

    <div class="ui user-card">

      <div class="avatar {{unless session.currentUser.avatar "empty"}}">
        {{#if session.currentUser.avatar}}
          <img src="{{session.currentUser.avatar}}" alt="">
        {{/if}}
      </div>
      <div class="text-bold">
       {{session.currentUser.name}} {{session.currentUser.lastName}}
      </div>
    </div>

    <div class="ui list menu border-bottom-none">
      {{#link-to (constant "ROUTE_SETTINGS_NOTIFICATIONS") class='item'}}
        <div class="content"><i class="lavo-icon-ring icon"></i> Notifications</div>
        {{#if model.notificationsCount}}
          <div class="content">
            <div class="ui counter">{{model.notificationsCount}}</div>
          </div>
        {{/if}}
      {{/link-to}}
      {{#link-to (constant "ROUTE_SETTINGS_PROMOTION") class='item'}}
        <div class="content"><i class="lavo-icon-promotion icon"></i> Promotions</div>
      {{/link-to}}
      {{#link-to (constant "ROUTE_SETTINGS_PROFILE") (query-params redirectTo="undefined" vendorId="undefined") class='item'}}
        <div class="content"><i class="lavo-icon-user icon"></i> Account settings</div>
      {{/link-to}}
      {{#link-to (constant "ROUTE_SETTINGS_CREDITS") class='item'}}
        <div class="content"><i class="lavo-icon-credit-card icon"></i> Lavo credits</div>
      {{/link-to}}
      <div class="item" {{action 'logout'}}>
        <div class="content"><i class="lavo-icon-logout icon"></i> Logout</div>
      </div>
    </div>

    <div class="ui list header"></div>

    <div class="ui list menu border-bottom-none">
      {{link-to 'About' (constant "ROUTE_INFO") "about" class='item'}}
      {{link-to 'Terms and conditions' (constant "ROUTE_INFO") "terms" class='item'}}
      {{link-to 'Privacy policy' (constant "ROUTE_INFO") "privacy_policy" class='item'}}
      {{link-to 'Return policy' (constant "ROUTE_INFO") "return_policy" class='item'}}
    </div>

    <div class="ui list header"></div>

  </div>

</div>
