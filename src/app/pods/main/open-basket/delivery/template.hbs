<div class="ui padded layout order">
  <div class="header content">

    <div class="ui transparent header header-default-height">
      <div class="item">
        {{#link-to (constant "ROUTE_VENDOR") model.order.vendor.id classNames="back" tagName="div"}}
          <i class="lavo-icon-arrow icon"></i>
        {{/link-to}}
      </div>
      <div class="content">Order settings</div>
      <div class="item"></div>
    </div>

  </div>
  <div class="content">
    <div class="ui list header">DELIVERY TYPE</div>
    <div class="ui list purple">
      {{#each model.shippingMethods as |method|}}
        {{ui-radio
        label=method.shippingMethod
        value=method.id
        groupValue=model.selectedMethodId
        changed=(route-action "selectShippingMethod" method)}}
      {{/each}}
    </div>
  </div>
  <div class="footer content">
    {{#link-to (constant "ROUTE_OPEN_BASKET_SHIPPING")
    tagName="div" classNames="ui full-width unbordered blue button"}}
      NEXT
    {{/link-to}}
  </div>
</div>
